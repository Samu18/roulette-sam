{% extends 'base.html.twig' %}

{% block title %}Roulette Sam - Game{% endblock %}

    {% block stylesheets %}
        {{ parent() }}


        <style>
            body {
                background-color: #1C1C1C;
            }

            .content-players {
                background-color: #474747;
                max-height: 60vh;
                overflow-y: auto;
            }

            .item-player {
                padding: 0.5rem 0.2rem;
                color: white;
                max-height: 12vh;
                /*float: left;*/
            }

            .item-player b {
                font-size: 1.4rem;
            }

            .item-player input[type="number"] {
                width: 45%;
            }

            .item-player {

            }

            a.btn.btn-game {
                color: #64dc17;
                font-weight: 900;
                font-size: 3rem;
                background-color: white;
            }

            .img-game {
                width: 70%;
            }

            @keyframes rotation-roulette {
                from {
                    transform: rotate(0deg);
                }
                to {
                    transform: rotate(359deg);
                }
            }

            .rotate {
                animation: rotation-roulette 1600ms infinite linear;
            }

            .content-input {
                /* position: relative; */
                margin-bottom: 30px;
                /* padding: 5px 0 5px 60px; */
                display: block;
                width: 40px;
            }

            .content-input input {
                visibility: hidden;
                position: relative;
                right: 0;
            }

            .content-input input, .content-select select {
                appearance: none;
                -webkit-appearance: none;
                -moz-appearance: none;
            }

            .content-input input[type=radio] + i {
                height: 30px;
                width: 30px;
                border-radius: 100%;
                left: 15px;
            }


            .content-input input + i {
                background: #fff;
                border: 2px solid rgba(0, 0, 0, 0.2);
                position: absolute;
                left: 0;
                top: 0;
            }

            .content-input input[type=radio]:checked + i:before {
                transform: scale(1);
                opacity: 1;
            }

            .content-input input[type=radio] + i:before {
                content: '';
                display: block;
                height: 22px;
                width: 22px;
                border-radius: 100%;
                position: absolute;
                z-index: 1;
                top: 3px;
                left: 2px;
                transition: all 0.25s ease;
                transform: scale(0) /* Lo reducimos a 0*/;
                opacity: 0;
            }

            .content-input.green input[type=radio] + i:before {
                background: #64dc17;
            }

            .content-input.red input[type=radio] + i:before {
                background: red;
            }

            .content-input.black input[type=radio] + i:before {
                background: black;
            }

            .content-input.red i {
                margin-left: 15%;
            }

            .content-input.black i {
                margin-left: 30%;
            }

            .content-result {
                float: right;
                display: grid;
                max-height: 60vh;
                text-align: center;
                background-color: #c3c3c3;
                padding: 1%;
                border-radius: 0.25rem;
                overflow-y: auto;
            }

            i.result-color:before {
                content: '';
                display: block;
                height: 30px;
                width: 30px;
                border-radius: 100%;
                z-index: 1;
                margin-bottom: 20%;
            }

            i.result-color.green:before {
                background: #64dc17;
            }

            i.result-color.red:before {
                background: red;
            }

            i.result-color.black:before {
                background: black;
            }
            #noPlayerAlert{
                position: absolute;
                z-index: 4;
            }
        </style>
    {% endblock %}

{% block body %}
    <span id="urlsApi" data-route-load-players="{{ path('roulette_load_players') }}"
          data-route-next-spin="{{ path('roulette_next_spin') }}"></span>
    <div class="container">

        <div class="row mt-5">
            <!-- Content no players -->
            <div id="noPlayerAlert" class="col-4 text-center ml-4" style="display: none;">
                <h3 class=" text-center text-white mt-5">
                    No hay jugadores con saldo disponible para participar<br><br><i class="icofont-sad icofont-4x"></i>
                </h3>
            </div>
            <!-- Content players -->
            <div id="playerList" class="col-6 p-3 content-players">

            </div>

            <!-- Content Roulette -->
            <div class="col-6  text-center">
                <img id="rouletteImage" class='img-game' src="{{ asset('images/roulette-game.png') }}">

                <div id="contentResultBet" class="content-result">
                </div>
            </div>

            <!-- Rule of bet amount  -->
            <h5 id="alertRule" class="w-50 mt-2 text-white" style="display: none;">El monto de apuesta debe estar entre
                un 11% y 19%, si el saldo actual es menor o igual a $ 1000, se toma todo el saldo.</h5>
        </div>

        <!-- Actions game -->
        <div class="row justify-content-center mt-5 ">
            <div class="col-md-4 text-center ">
                <a id="btnPlay" onclick="spinRoulette()" class="btn btn-game disabled">GIRAR</a>
                <h5 class="text-white mt-2">En autom√°tico cada 3 min</h5>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/roulette-manager1.js') }}"></script>

{% endblock %}