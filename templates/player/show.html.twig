{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body_content %}
    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ player.username }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ player.amount }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ player.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('player_index') }}">back to list</a>

    <a href="{{ path('player_edit', {'id': player.id}) }}">edit</a>

    {{ include('player/_delete_form.html.twig') }}
{% endblock %}
