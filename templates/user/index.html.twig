{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active breadcrumb-item" aria-current="page">{{ 'label.users'|trans }}</li>
{% endblock %}


{% block buttonPage %}
    <a href="{{ path('user_new') }}">
        <button class="btn btn-primary">{{ 'label.create'|trans }}</button>
    </a>
{% endblock %}

{% block contentOptions %}
{% endblock %}

{% block descriptionPage %}
{% endblock %}

{% block filterOptions %}

    <form method="get" action="{{ path('user_index') }}">
        <div class="row">

            {#            <div class="col-sm-4 col-md-4">#}
