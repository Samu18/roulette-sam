{% endblock %}


{% block mainContent %}

    <div class="main-card mb-1 card" style="padding: 1rem 1rem 0 1rem;">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>{{ 'label.user.name'|trans }}</th>
                <th>{{ 'label.email'|trans }}</th>
                <th>{{ 'label.rol'|trans }}</th>
                <th style="text-align: center;">{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.usernameCustom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.userProfile.nameProfile }}</td>
                    <td style="text-align: center;">
{#                        <a href="{{ path('user_show', {'id': user.id}) }}"#}
{#                           style="margin-right: 10px; margin-left: 10px; text-decoration: none;">#}
{#                            <i class="fa fa-eye"></i>#}
{#                        </a>#}
                        <a href="{{ path('user_edit', {'id': user.id}) }}"
                           style="text-decoration: none;">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">{{ 'label.no.records.found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row" style="margin-right: 0px; margin-left: 0px;">
        <div class="col-md-6 mt-4 pl-0">
            <div class="count font-light">
                {#                {{ 'label.users.quantity'|trans ~': '~ users.getTotalItemCount }}#}
            </div>
        </div>
        <div id="pagination_universities" class="col-md-6 mt-4 pr-0">
            <div class="navigation font-light float-right">
                {#                {{ knp_pagination_render(users) }}#}
            </div>
        </div>
    </div>
{% endblock %}


